@model StudentGrade

@{
    ViewData["Title"] = "Student Grade Details";
}

<div class="container mt-5">
    <h1>@Model.Name - Details</h1>

    <div class="card">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-3"><strong>Assignment 1:</strong></div>
                <div class="col-sm-9">@Model.Assignment1</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3"><strong>Assignment 2:</strong></div>
                <div class="col-sm-9">@Model.Assignment2</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3"><strong>Midterm:</strong></div>
                <div class="col-sm-9">@Model.Midterm</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3"><strong>Final:</strong></div>
                <div class="col-sm-9">@Model.Final</div>
            </div>
            <hr />
            <div class="row mb-3">
                <div class="col-sm-3"><strong>Total:</strong></div>
                <div class="col-sm-9 fs-5">@Model.CalculatedTotal</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3"><strong>Status:</strong></div>
                <div class="col-sm-9">
                    <span class="badge @(Model.Status == "Pass" ? "bg-success" : "bg-danger")">
                        @Model.Status
                    </span>
                </div>
            </div>
            <div class="mt-4">
                <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
                <a href="@Url.Action("Summary")" class="btn btn-info">View Summary</a>
            </div>
        </div>
    </div>
</div>


