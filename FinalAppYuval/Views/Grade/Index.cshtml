@model List<StudentGrade>

@{
    ViewData["Title"] = "Student Grades";
}

<h2>Student Grades</h2>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">No students found.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th class="text-center">A1</th>
            <th class="text-center">A2</th>
            <th class="text-center">Midterm</th>
            <th class="text-center">Final</th>
            <th class="text-center">Total</th>
            <th class="text-center">Status</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td class="text-center">@student.Assignment1</td>
                <td class="text-center">@student.Assignment2</td>
                <td class="text-center">@student.Midterm</td>
                <td class="text-center">@student.Final</td>
                <td class="text-center fw-bold">@student.CalculatedTotal</td>
                <td class="text-center">
                        <span class="badge @(student.Status == "Pass" ? "bg-success" : "bg-danger")">
                            @student.Status
                        </span>
                </td>
            </tr>
        }
        </tbody>
    </table>
}




