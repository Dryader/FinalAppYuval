@model GradeSummary

@{
    ViewData["Title"] = "Grade Summary";
}

<h2>Grade Summary</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h6>Total Students</h6>
                <h3 class="text-primary">@Model.TotalStudents</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h6>Passed</h6>
                <h3 class="text-success">@Model.PassedCount</h3>
                <small>(@Model.PassPercentage.ToString("F1")%)</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h6>Failed</h6>
                <h3 class="text-danger">@Model.FailedCount</h3>
                <small>(@Model.FailPercentage.ToString("F1")%)</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h6>Average Score</h6>
                <h3 class="text-info">@Model.AverageScore.ToString("F1")</h3>
            </div>
        </div>
    </div>
</div>


